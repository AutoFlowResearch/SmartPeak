# path to visual studio redistributable (has to match your CMake generator)
!define VS_REDISTRIBUTABLE_PATH "@VC_REDIST_PATH@"
!define VS_REDISTRIBUTABLE_EXE "@VC_REDIST_EXE@"
# define your platform:
!define PLATFORM "@PLATFORM@"
# path to SmartPeak - packaging tree (where all the install stuff lands during CPack)
!define SMARTPEAKPACKAGEDIR "${PACKAGING_DIR}"
# path to SmartPeak - build tree
!define SMARTPEAKBINDIR "${PACKAGING_DIR}/@INSTALL_BIN_DIR@"
!define SMARTPEAKLIBDIR "${PACKAGING_DIR}/@INSTALL_LIB_DIR@"
!define SMARTPEAKSHAREDIR "${PACKAGING_DIR}/@INSTALL_SHARE_DIR@"
# path to SmartPeak - source tree
!define SMARTPEAKDIRSRC "@PROJECT_SOURCE_DIR@"
!define NSISRESOURCES "@PROJECT_SOURCE_DIR@/cmake/Windows"
# path to SmartPeak - doc
!define SMARTPEAKDOCDIR "${PACKAGING_DIR}/@INSTALL_DOC_DIR@"
# version string (does not need to be only numbers, in contrast to VERSION_LONG which has to have 4 number levels)
!define VERSION "@SMARTPEAK_PACKAGE_VERSION_FULLSTRING@"

